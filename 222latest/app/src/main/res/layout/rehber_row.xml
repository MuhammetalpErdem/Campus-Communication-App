<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/newname"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="7dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newmail"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:text="email"
        app:layout_constraintStart_toStartOf="@+id/newname"
        app:layout_constraintTop_toBottomOf="@+id/newname" />

    <Button
        android:id="@+id/viewprofile"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:onClick="goToProfile"
        android:text="PROFILE"
        app:layout_constraintBottom_toBottomOf="@+id/addgroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newmail" />

    <Button
        android:id="@+id/addgroup"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:onClick="addGroup"
        android:text="Add Group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viewprofile"
        app:layout_constraintTop_toBottomOf="@+id/newmail" />
</androidx.constraintlayout.widget.ConstraintLayout>